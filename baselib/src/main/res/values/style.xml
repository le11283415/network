<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="core_DialogButtonTextStyle">
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/core_color_7dba50</item>
        <item name="android:background">@drawable/selector_dialog_btn</item>
        <!--api15不兼容-->
        <!--<item name="android:stateListAnimator">@null</item>-->
    </style>
    <style name="core_DialogMessageTextStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/core_color_474747</item>
        <item name="android:paddingLeft">@dimen/core_dialog_text_margin_horizontal</item>
        <item name="android:paddingRight">@dimen/core_dialog_text_margin_horizontal</item>
        <item name="android:paddingTop">@dimen/core_dialog_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/core_dialog_padding_vertical</item>
    </style>
    <style name="core_DialogTitleTextStyle">
        <item name="android:textSize">@dimen/core_big_text_size</item>
        <item name="android:textColor">@color/core_color_363636</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/core_dialog_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/core_dialog_padding_vertical</item>
    </style>
    <style name="core_dialog_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:textColor">#007aff</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:background">#ffffff</item>
    </style>
    <style name="core_DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/core_transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="core_InputGroupCodeViewNumber">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- 自定义loading dialog -->
    <style name="core_loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowBackground">@drawable/view_loading_dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>
</resources>