<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="ResourceName">

    <ImageView
        android:id="@+id/iv_common_network_error"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:src="@drawable/core_icon_error_network"/>

    <TextView
        android:id="@+id/tv_common_network_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/core_color_9397a1"
        android:text="@string/core_network_error"/>
    
    <com.xg.core.view.EasyTextView
        android:id="@+id/btn_refresh_network_error"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_marginTop="22dp"
        android:text="@string/core_reload"
        android:textColor="@color/core_color_41444e"
        app:backgroundNormalColor="@color/core_color_ffd800"
        app:backgroundPressedColor="@color/core_color_ffcc00"
        app:backgroundRadius="3dp"/>

</LinearLayout>